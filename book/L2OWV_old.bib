@article{https://doi.org/10.1029/JC091iC11p12975,
author = {Erickson, David J. and Merrill, John T. and Duce, Robert A.},
title = {Seasonal estimates of global oceanic whitecap coverage},
journal = {Journal of Geophysical Research: Oceans},
volume = {91},
