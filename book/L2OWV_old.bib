@article{Wentz1982,
author = {Wentz, F. J. and Cardone, V. J. and Fedor, L. S.},
title = {Intercomparison of wind speeds inferred by the SASS, altimeter, and SMMR},
journal = {Journal of Geophysical Research: Oceans},
volume = {87},
